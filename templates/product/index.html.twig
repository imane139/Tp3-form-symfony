{% extends 'base.html.twig' %}

{% block title %}Premium Wireless Headphones{% endblock %}

{% block body %}
<!-- Product Page HTML -->
<div class="container my-5">
    <div class="row">
        <!-- Image du produit -->
        <div class="col-md-6">
             <img src="{{ asset('assets/img/headphones.jpeg') }}"
                 class="img-fluid rounded"
                 alt="Product">
        </div>

        <!-- DÃ©tails et formulaire -->
        <div class="col-md-6">
            <h1 class="mb-3">Premium Wireless Headphones</h1>
            <p class="text-muted fs-4 mb-3">$129.99</p>

            <p class="mb-4">
                Experience superior sound quality with our premium wireless headphones.
                Features active noise cancellation, 30-hour battery life, and premium comfort padding.
            </p>

            <ul class="list-unstyled mb-4">
                <li><strong>Brand:</strong> AudioTech</li>
                <li><strong>Color:</strong> Matte Black</li>
                <li><strong>Connectivity:</strong> Bluetooth 5.0</li>
                <li><strong>Battery Life:</strong> 30 hours</li>
            </ul>




            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.quantity, 'Quantity', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.quantity) }}
                    {{ form_errors(form.quantity) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.color, 'Select Color', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.color) }}
                    {{ form_errors(form.color) }}
                </div>

                {{ form_widget(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
